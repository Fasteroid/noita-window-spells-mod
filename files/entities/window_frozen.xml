<Entity 
   name="$projectile_default" 
   tags="projectile_player"
   >

	<GameAreaEffectComponent
		radius="28"
		frame_length="70"
		>
	</GameAreaEffectComponent>

	<Base file="mods/windows/files/entities/window_base.xml">
		<SpriteComponent 
			image_file="mods/windows/files/sprites/blast_frozen.xml"
			>
		</SpriteComponent>


		<SpriteParticleEmitterComponent
			sprite_file="data/particles/snowflake_$[1-2].xml"
			lifetime="10"
			color.r="1" color.g="1" color.b="1" color.a="1"
			color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-0.5"
			gravity.x="0" gravity.y="10"
			velocity_slowdown="0.5"
			count_min="1" count_max="2"
			randomize_rotation.min="-3.1415"
			randomize_rotation.max="3.1415"
			>
		</SpriteParticleEmitterComponent>
	</Base>
	
	<!-- body -->
	<ParticleEmitterComponent 
		emitted_material_name="spark_white"
		gravity.y="0.0"
		lifetime_min="0.5"
		lifetime_max="1.5"
		count_min="2"
		count_max="2"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		cosmetic_force_create="0"
		airflow_force="0.1"
		airflow_time="0.01"
		airflow_scale="0.05"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		emit_cosmetic_particles="1"
		is_emitting="1" 
		
		x_pos_offset_min="-1"
		y_pos_offset_min="-32"
		x_pos_offset_max="1"
		y_pos_offset_max="32"
		>
    </ParticleEmitterComponent>	

	<ParticleEmitterComponent 
		emitted_material_name="spark_white"
		gravity.y="0.0"
		lifetime_min="0.5"
		lifetime_max="1.5"
		count_min="1"
		count_max="1"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		cosmetic_force_create="0"
		airflow_force="0.3"
		airflow_time="0.01"
		airflow_scale="0.05"
		emission_interval_min_frames="2"
		emission_interval_max_frames="2"
		emit_cosmetic_particles="1"
		is_emitting="1" 
		
		x_pos_offset_min="-1"
		y_pos_offset_min="-32"
		x_pos_offset_max="1"
		y_pos_offset_max="-31"
		>
	</ParticleEmitterComponent>

	<ParticleEmitterComponent 
		emitted_material_name="spark_white"
		gravity.y="0.0"
		lifetime_min="0.5"
		lifetime_max="1.5"
		count_min="1"
		count_max="1"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		cosmetic_force_create="0"
		airflow_force="0.3"
		airflow_time="0.01"
		airflow_scale="0.05"
		emission_interval_min_frames="2"
		emission_interval_max_frames="2"
		emit_cosmetic_particles="1"
		is_emitting="1" 
		
		x_pos_offset_min="-1"
		y_pos_offset_min="32"
		x_pos_offset_max="1"
		y_pos_offset_max="31"
		>
	</ParticleEmitterComponent>

	<MagicConvertMaterialComponent
      from_material_array="water,water_ice,water_salt,water_fading,water_static,fire,lava,water_swamp,radioactive_liquid,acid,blood_cold,blood,poison,slime"
      to_material_array="ice_static,ice_static,ice_static,ice_static,ice_static,air,rock_static,ice_static,ice_radioactive_static,ice_acid_static,ice_cold_static,ice_blood_static,ice_poison_static,ice_slime_static"
      kill_when_finished="0"
      steps_per_frame="5"
	  is_circle="1"
      radius="48" >
    </MagicConvertMaterialComponent>
	
	<MagicConvertMaterialComponent
      kill_when_finished="0"
      extinguish_fire="1"
	  is_circle="1"
      radius="48" >
    </MagicConvertMaterialComponent>

	<LuaComponent
		script_source_file="mods/windows/files/entities/window_frozen.lua"
		execute_every_n_frame="1"
		>
	</LuaComponent>

</Entity>